{
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist/",
        "typeRoots": [
            "./src/types"
        ],
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ],
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*",
        "index.ts",
        "mongo/*"
    ]
}
